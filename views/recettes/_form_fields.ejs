<div class="form-row">
  <div class="form-item">
    <label>Titre</label>
    <input type="text" name="titre" value="<%= recette.titre %>">
  </div>
  <div class="form-item">
    <label>Cuisinier</label>
    <select name="personne">
      <% personnes.forEach(personne => { %>
        <% if (personne.id === recette.personne) { %>
          <option selected label="<%= personne.nom %>" value="<%= personne.id %>">
        <% } else { %>
          <option label="<%= personne.nom %>" value="<%= personne.id %>">
        <% } %>
      <% }) %>
    </select>
  </div>
</div>

<div class="form-row">
  <div class="form-item">
    <label>Date de publication</label>
    <input type="date" name="publishDate"
          value="<%= recette.publishDate == null ? '' : recette.publishDate.toISOString().split('T')[0] %>">
  </div>
</div>

<div class="form-row">
  <div class="form-item">
    <label>Ingrédients</label>
    <textarea name="ingredients"><%= recette.ingredients %></textarea>
  </div>
  <div class="form-item">
    <label>Préparation</label>
    <textarea name="preparation"><%= recette.preparation %></textarea>
  </div>
  <div class="form-item form-item-no-grow">
    <label>Photo</label>
    <input type="file" name="cover" class="recette-cover filepond">
  </div>
</div>